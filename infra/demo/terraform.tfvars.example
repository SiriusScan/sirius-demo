# Copy this file to terraform.tfvars and fill in your values

# AWS Configuration
aws_region = "us-east-1"

# Network Configuration (REQUIRED)
# Find your default VPC and public subnet in AWS Console
vpc_id    = "vpc-xxxxxxxxxxxxxxxxx"   # Replace with your VPC ID
subnet_id = "subnet-xxxxxxxxxxxxxxxxx" # Replace with your public subnet ID

# Instance Configuration
instance_type      = "t3.medium"
root_volume_size   = 30

# Access Control
# Use 0.0.0.0/0 for public demo, or restrict to specific IPs
allowed_cidrs = ["0.0.0.0/0"]

# Repository Configuration
sirius_repo_url = "https://github.com/YourOrg/Sirius.git"
demo_branch     = "demo"

# Resource Tags
common_tags = {
  Project     = "SiriusDemo"
  Environment = "demo"
  ManagedBy   = "Terraform"
  Owner       = "OpenSecurity"
  TTL         = "Demo"
}

