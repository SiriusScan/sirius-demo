# Copy this file to terraform.tfvars and fill in your values

# AWS Configuration
aws_region = "us-east-1"

# Network Configuration (REQUIRED)
# Find your default VPC and public subnet in AWS Console
vpc_id    = "vpc-xxxxxxxxxxxxxxxxx"   # Replace with your VPC ID
subnet_id = "subnet-xxxxxxxxxxxxxxxxx" # Replace with your public subnet ID

# Instance Configuration
instance_type      = "t3.small"  # Cost-optimized for demo (2 vCPU, 2GB RAM)
root_volume_size   = 40          # Minimum 40GB required for Docker builds (UI build needs ~15GB)

# Access Control
# Use 0.0.0.0/0 for public demo, or restrict to specific IPs
allowed_cidrs = ["0.0.0.0/0"]

# SSH Access (optional - for troubleshooting)
# Leave empty to disable SSH access (SSM Session Manager only)
public_key = "ssh-rsa "
# ssh_allowed_cidrs = ["1.2.3.4/32"]  # Restrict SSH to specific IPs

# Repository Configuration
sirius_repo_url = "https://github.com/YourOrg/Sirius.git"
demo_branch     = "demo"  # Use the 'demo' branch from Sirius repository

# Resource Tags
common_tags = {
  Project     = "SiriusDemo"
  Environment = "demo"
  ManagedBy   = "Terraform"
  Owner       = "OpenSecurity"
  TTL         = "Demo"
}

